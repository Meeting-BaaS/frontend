{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "@repo/shared/*": ["../../packages/shared/*"],
      "@repo/shared/components/ui/*": ["../../packages/shared/components/ui/*"],
      "@repo/shared/lib/*": ["../../packages/shared/lib/*"],
      "@repo/shared/animations/*": ["../../packages/shared/animations/*"],
      "@/lib/utils": ["../../packages/shared/lib/utils"],
      "@/components/ui/*": ["../../packages/shared/components/ui/*"],
      "@/animations/*": ["../../packages/shared/animations/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/shared/**/*.ts",
    "../../packages/shared/**/*.tsx",
    ".next/types/**/*.ts",
    "../logs/components/logs-table/sort-icon.tsx"
  ],
  "exclude": ["node_modules"]
}
